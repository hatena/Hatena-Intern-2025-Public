{
  "name": "@intern-2025/renderer-ts",
  "private": true,
  "engines": {
    "node": ">=v22.18.0"
  },
  "scripts": {
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint src '*.{mjs,mts}'",
    "lint:prettier": "prettier --check --log-level warn src '*.{mjs,mts}'",
    "lint-fix": "run-s lint-fix:eslint lint-fix:prettier",
    "lint-fix:eslint": "eslint --fix src '*.{mjs,mts}'",
    "lint-fix:prettier": "prettier --write --log-level warn src '*.{mjs,mts}'",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc --build tsconfig.build.json",
    "start": "node dist/index.mjs"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.1",
    "google-protobuf": "^3.21.4",
    "grpc-js-health-check": "^1.2.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.3.0",
    "@eslint/js": "^9.33.0",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^20.14.8",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^2.0.5"
  },
  "packageManager": "yarn@4.9.2"
}
